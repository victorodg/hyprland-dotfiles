{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 4,
    "modules-left": ["hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["hyprland/language", "pulseaudio", "backlight", "network", "cpu", "memory", "battery", "tray"],
    
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{name}"
    },
    
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%Y-%m-%d  %H:%M}",
        "format-alt": "{:%A, %B %d, %Y  %H:%M:%S}"
    },
    
    "hyprland/language": {
        "format": "ÔÑú {short}"
    },

    "pulseaudio": {
        "format": "ÔÄ®  {volume}%",
        "format-bluetooth": "ÔÄ® {volume}%",
        "format-muted": "ÔÄ¶  MUTE",
        "format-muted-bluetooth": "ÔÄ¶ MUTE",
        // "format": "VOL {volume}% {icon}",
        // "format-bluetooth": "BT {volume}% {icon}",
        "on-click": "pavucontrol"
    },    

    "backlight": {
        "device": "intel_backlight",
        "format": "üîÜ {percent}%",
        // "format": "BRT {percent}% {icon}",
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-"
    },    

    "network": {
        "format-wifi": "Ôá´  {essid} ({signalStrength}%)",
        "format-ethernet": "Û∞àÄ  {ipaddr}/{cidr}",
        // "format-wifi": "{essid} ({signalStrength}%) ",
        // "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Û∞ñ™",
        // "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },    

    "cpu": {
        "format": "Ôãõ {usage}%",
        // "format": "CPU {usage}% ",
        "tooltip": false
    },    

    "memory": {
        "format": "ÔÉâ {}%"
        // "format": "RAM {}% "
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{ÔâÅ {capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-plugged": "ÔÉß {capacity}%"
        // "format": "BAT {capacity}% {icon}",
        // "format-charging": "CHR {capacity}% ",
        // "format-plugged": "PWR {capacity}% "
    },
    
    "tray": {
        "icon-size": 21,
        "spacing": 10
    }
}